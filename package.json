{
    "name": "react-native-zoom-grid",
    "version": "0.1.1",
    "main": "lib/commonjs/index.js",
    "description": "A high-performance, zoomable grid component for React Native, built on top of @shopify/flash-list.",
    "repository": {
        "type": "git",
        "url": "https://github.com/wassgha/react-native-zoom-grid.git"
    },
    "author": "Wassim Gharbi <wassgha@gmail.com>",
    "license": "MIT",
    "react-native": "src/index.tsx",
    "source": "src/index.tsx",
    "types": "lib/typescript/index.d.ts",
    "module": "lib/module/index.js",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "clean": "del-cli lib",
        "prepare": "bob build",
        "release": "release-it"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.json"
                }
            ]
        ]
    },
    "peerDependencies": {
        "@shopify/flash-list": "*",
        "react": "*",
        "react-native": "*",
        "react-native-gesture-handler": "*",
        "react-native-reanimated": "*"
    },
    "devDependencies": {
        "@shopify/flash-list": "^2.2.0",
        "@types/react-native": "^0.72.8",
        "react-native": "^0.82.1",
        "react-native-gesture-handler": "^2.29.1",
        "react-native-reanimated": "^4.2.0",
        "react-native-safe-area-context": "^5.6.2",
        "typescript": "^5.0.0"
    }
}